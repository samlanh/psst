			class: 'fullside',
			placeHolder: "<?php echo $tr->translate("SELECT_STUDENT_NAME") ?>",
			onChange: function () {
				addRowStudent();
			}
		}, "studentId");

		ready(function () {
			branchId = dijit.byId('branch_id');
			branchId.on('change', function (evt) {
				branchId = dijit.byId('branch_id').get('value');
				if (branchId == '') {
					dijit.byId("branch_id").focus();
					return false;
				}
				getAllstudentBranch();
			});

			discount_id = dijit.byId('discount_id');
			discount_id.on('change', function (evt) {
				getAllstudentBranch();
			});

			checkDiscountPeriod();
			getAllstudentBranch();
			discountFor();
