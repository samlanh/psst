				discount_id = dijit.byId('discount_id').get('value');
				if (discount_id == -1) {
					dijit.byId("popup_add_discount").show();
					dijit.byId("s_save").set("disabled", false);
				}
			}
		}, "discount_id");

		new dijit.form.FilteringSelect({
			required: false,
			autoComplete: false,
			queryExpr: "*${0}*",
			id: "studentId",
