		dijit.byId("branch_id").focus();
		return false;}
	dojo.xhrPost({
		url:url_data,
		content:{
			'branch_id':branch_id
		},
		handleAs:"json",
		load: function(data) {
			student_store  = getDataStorefromJSON('id','name', data);
		    dijit.byId('stu_name').set('store',student_store);  
		},
		error: function(err) {
			alert(err);
		}
	});
}
