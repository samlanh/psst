var academic_year_fee_store  = getDataStorefromJSON('id','name',<?php print_r(Zend_Json::encode(array()));?> );
dojo.ready(function(){
	new dijit.form.FilteringSelect({
		store: academic_year_fee_store,
		queryExpr: "*${0}*",
		autoComplete:false,                     
		queryExpr: "*${0}*",
		autoComplete:false,                     
		required: false,                     
		id: "academic_year_fee",
		name: "academic_year_fee",
		class: "fullside", 		
		placeHolder:"<?php echo $tr->translate("SELECT_ACADEMIC_YEAR");?>",          
		onChange: function() {  
		}
	}, "academic_year_fee");

	new dijit.form.FilteringSelect({
		queryExpr: "*${0}*",
		autoComplete:false,                     
		queryExpr: "*${0}*",
		autoComplete:false,                     
		required: false,                     
		id: "fromFeeid",
		name: "fromFeeid",
		class: "fullside", 		
		placeHolder:"<?php echo $tr->translate("SELECT_ACADEMIC_YEAR");?>",          
		onChange: function() {  
			oldFeeId='<?php echo $this->search['fromFeeid'];?>';
			fromFeeid = dijit.byId('fromFeeid').get('value');
			dijit.byId('OldFee').attr('value',fromFeeid);

			if(oldFeeId!=fromFeeid){
				$('#public-methods').empty().multiSelect('refresh');
			}
		}
	}, "fromFeeid");
	
	var branch_id = dijit.byId('branch_id');
	 branch_id.on('change', function(evt) {
		 getAllAcademicByBranch();
  	});
	 oldFeeId='<?php echo $this->search['fromFeeid'];?>';
	 getAllAcademicByBranch();
});

url_getacademic = '<?php echo $this->url(array('module'=>'accounting','controller'=>'fee','action'=>'getfeeid'));?>';
function getAllAcademicByBranch(){
	
	dijit.byId('academic_year_fee').reset();
	branch_id = dijit.byId('branch_id').get('value');
	if(branch_id=='' || branch_id==-1){
		var academic_store  = getDataStorefromJSON('id','name',<?php print_r(Zend_Json::encode(array()));?> );
		dijit.byId('academic_year_fee').set('store',academic_store);  
		dijit.byId('branch_id').focus();
		return false;
	}
	dojo.xhrPost({
		url: url_getacademic,
		content:{
			'branch_id':branch_id,
			'selectOption':1,
			'isFinished':0
			},
		handleAs:"json",
		load: function(data){
			academic_store  = getDataStorefromJSON('id','name', data);
			dijit.byId('academic_year_fee').set('store',academic_store);  
			dijit.byId('fromFeeid').set('store',academic_store);  
			if(oldFeeId>0){
				dijit.byId('fromFeeid').attr('value',oldFeeId);
			}
			dijit.byId('branch').set('value',branch_id);  
		},
		error: function(err) {
		}
	});
}
</script>