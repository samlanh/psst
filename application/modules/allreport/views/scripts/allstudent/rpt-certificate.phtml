function getsexEng($sex){
	if($sex==1){
		$str="M";
	}else{
		$str="F";
	}
	return $str;
}
function getsexKH($sex){
	if($sex==1){
		$str="ប្រុស";
	}else{
		$str="ស្រី";
	}
	return $str;
}
function calCulateGrade($score){
	$grade="";
	if($score>=85){
		$grade="A";
	}else if($score>=80){
		$grade="B+";
	}else if($score>=70){
		$grade="B";
	}else if($score>=65){
		$grade="C+";
	}else if($score>=50){
		$grade="C";
	}else if($score>=45){
		$grade="D";
	}else if($score>=40){
		$grade="E";
	}else if($score<40){
		$grade="F";
	}
	return $grade;
}
