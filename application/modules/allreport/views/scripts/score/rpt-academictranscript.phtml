		$arrFilter = array_filter($subjectArray, function ($subjectArray) {
			return $subjectArray['subjectLang'] == 1;
		});
		return count($arrFilter);
	} else if ($subjectLang == 2) {
		$arrFilter = array_filter($subjectArray, function ($subjectArray) {
			return $subjectArray['subjectLang'] == 2;
		});
		return count($arrFilter);
	} else {
		return 0;
	}
}
