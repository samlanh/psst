<script type="text/javascript">
var url_to_group = '<?php echo $this->url(array('module'=>'foundation','controller'=>'studentchangegroup','action'=>'get-to-group')); ?>';
function toStudentGroup(){
		group = dijit.byId('group').get('value');
		if(group==-1){
			alert('Please select group !!! ');
			return false;
		}
	
	dojo.xhrPost({
		url:url_to_group,
		content:{
			'to_group':group
			},
		handleAs:"json",
		load: function(data) {
			dojo.byId('lbldetail').innerHTML='<span style="color:red;">Academic :  </span>'+data.year+'<span style="color:red;"> , Degree :  </span>'+data.degree+'<br /><span style="color:red;">  Grade :  </span>'+data.grade+'<span style="color:red;"> , Session :  </span>'+data.session+'<span style="color:red;"> , Room :  </span>'+data.room+'<br /><span style="color:red;">  Start Date :  </span>'+data.start_date+'<span style="color:red;"> , Expired Date :  </span>'+data.expired_date;   
			dijit.byId('academic_year_group').attr('value',data.academic_year_id);
			dijit.byId('degree_group').attr('value',data.degree_id);
			dijit.byId('grade_group').attr('value',data.grade_id);
			dijit.byId('session_group').attr('value',data.session_id);
			dijit.byId('room_group').attr('value',data.room_id);
		},
		error: function(err) {
			alert(err);
		}
	});
}

var url_getgroup = '<?php echo $this->url(array("module"=>"global","controller"=>"group","action"=>"getgroup"));?>';										
function getRefreshGroup(){
	loading();
	dojo.xhrPost({
		url:url_getgroup,
		handleAs:"json",
		load: function(data) {
			group_store  = getDataStorefromJSON('id','name', data.group);
		    dijit.byId('group').set('store',group_store);  
		    document.getElementsByClassName("overlay")[0].style.display="none";
		},
		error: function(err) {
			document.getElementsByClassName("overlay")[0].style.display="none";
		}
	});
}
function loading(){
