			error: function(err) {
				
			}
		});
	}
	
	var url_to_group = '<?php echo $this->url(array('module'=>'foundation','controller'=>'changebranch','action'=>'get-to-group')); ?>';
	function toStudentGroup(type){
		if(type==1){
			togroup = dijit.byId('from_group').get('value');
			if(togroup==""){
				dojo.byId('lblfromgroup').innerHTML="";
			}
		}else{
			togroup = dijit.byId('to_group').get('value');
			if(togroup==""){
				dojo.byId('lblfromgroup').innerHTML="";
			}
		}
		if(togroup==""){
			return false;
		}
		dojo.xhrPost({
			url:url_to_group,
			content:{
				'to_group':togroup
				},
			handleAs:"json",
			load: function(data) {
				var temp='';
				temp+='<div  style=" padding: 5px !important; border: solid 2px #02014a;   border-radius: 1px;"><ul>';
					temp+='<li>';
						temp+='<span class="lbl-tt"><?php echo $tr->translate("ACADEMIC_YEAR")?></span> : '+data.year;
					temp+='</li>';
					temp+='<li>';
						temp+='<span class="lbl-tt"><?php echo $tr->translate("DEGREE")?></span> : '+data.degree;
					temp+='</li>';
					temp+='<li>';
						temp+='<span class="lbl-tt"><?php echo $tr->translate("GRADE")?></span> : '+data.grade;
					temp+='</li>';
					temp+='<li>';
						temp+='<span class="lbl-tt"><?php echo $tr->translate("SESSION")?></span> : '+data.session;
					temp+='</li>';
				temp+='</ul></div>';
				if(type==1){
					dojo.byId('lblfromgroup').innerHTML=temp;
				}else{
					dojo.byId('lbltogroup').innerHTML=temp;
				}
			},
			error: function(err) {
			}
		});
	}
