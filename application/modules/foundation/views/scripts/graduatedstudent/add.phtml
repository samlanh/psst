var url_to_group = '<?php echo $this->url(array('module'=>'foundation','controller'=>'groupstudentchangegroup','action'=>'get-to-group')); ?>';
function toStudentGroup(type){
	togroup = dijit.byId('from_group').get('value');
	dojo.xhrPost({
