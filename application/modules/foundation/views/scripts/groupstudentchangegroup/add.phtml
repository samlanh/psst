var url_to_group = '<?php echo $this->url(array('module'=>'foundation','controller'=>'groupstudentchangegroup','action'=>'get-to-group')); ?>';
function toStudentGroup(type){
	if(type==1){
		dijit.byId('identity').attr('value','');
		togroup = dijit.byId('from_group').get('value');
		if(togroup==0){
			dojo.byId('lblfromgroup').innerHTML='';
			return false;
		}
	}else{
		togroup = dijit.byId('to_group').get('value');
		if(togroup==0 ){
			dojo.byId('lbltogroup').innerHTML='';
			return false;
		}
	}
	dojo.xhrPost({
		url:url_to_group,
		content:{
			'to_group':togroup,
			'type'	  :type,
			},
		handleAs:"json",
		load: function(data) {
			if(type==1){
				dojo.byId('lblfromgroup').innerHTML='<span style="color:red;"><?php echo $tr->translate("ACADEMIC_YEAR")?> :  </span>'+data.year+'<span style="color:red;">  <?php echo $tr->translate("DEGREE")?> :  </span>'+data.degree+'<span style="color:red;">  <?php echo $tr->translate("GRADE")?> :  </span>'+data.grade+'<span style="color:red;">  <?php echo $tr->translate("SESSION")?> :  </span>'+data.session;
