function setValue(i){
	$('#identity').val('');
	for(var j=1;j<=i;j++){
		if(dojo.byId('checkbox'+j).checked){
			if($("#identity").val()!="") {
				var iden = $("#identity").val();
				$("#identity").val(iden+','+j);
			} else{
				$("#identity").val(j);
			}
		}
	}
}
function check(i){
	if($('#checkall').is(":checked")){
		for(var j=1;j<=i;j++){
			$('#checkbox'+j).each(function() { //loop through each checkbox
	            this.checked = true;  
			});
		}
	}else{
		for(var j=1;j<=i;j++){
			$("#checkbox"+j).removeAttr("checked");
		}
	}
}
