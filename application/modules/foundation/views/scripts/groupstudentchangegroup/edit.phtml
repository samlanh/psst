function setpassstudent(){
	var identity = $('#identity').val();
	var arrays = identity.split(',');
	for(var i=1;i<=arrays.length;i++) {
		var stu_id = $("#stu_id_"+i).val();
		var pass_identity = $('#old_iden').val();
		var arr = pass_identity.split(',');
		for(var j=0;j<arr.length;j++) {
			var pass_stu_id = $("#old_student"+j).val();
			if(stu_id==pass_stu_id){
				$('#checkbox'+i).prop('checked', true);
			}
		}
	}
	$("#identity").val("<?php echo $this->rs['array_checkbox'];?>");
}
function setValue(i){
	$('#identity').val('');
	for(var j=1;j<=i;j++){
		if(dojo.byId('checkbox'+j).checked){
			if($("#identity").val()!="") {
				var iden = $("#identity").val();
				$("#identity").val(iden+','+j);
			} else{
				$("#identity").val(j);
			}
		}
	}
}
function check(i){
	if(dojo.byId('checkall').checked){
		for(var j=1;j<=i;j++){
			$('#checkbox'+j).each(function() { //loop through each checkbox
	            this.checked = true;  
			});
		}
	}else{
		for(var j=1;j<=i;j++){
			$("#checkbox"+j).removeAttr("checked");
		}
	}
