			dijit.byId('studentid').set('store',group_store);  
			dijit.byId('branch_id').focus();
			return false;
		}
		dojo.xhrPost({
			url:url_data,
			content:{
				'student_name':1,
				'branch_id':branch_id
			},
			handleAs:"json",
			load: function(data) {
				student_store  = getDataStorefromJSON('id','name', data);
			    dijit.byId('studentid').set('store',student_store);  
			},
			error: function(err) {
				alert(err);
			}
		});
