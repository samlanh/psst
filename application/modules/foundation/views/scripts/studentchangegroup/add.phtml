<script type="text/javascript">
	var url_student = '<?php echo $this->url(array('module'=>'foundation','controller'=>'studentchangegroup','action'=>'get-student')); ?>';
	function getStudentInfo(type){
		if(type==1){
			studentid = dijit.byId('studentid').get('value');
			dijit.byId('studentname').attr('value',studentid);
		}else{
			studentid = dijit.byId('studentname').get('value');
			dijit.byId('studentid').attr('value',studentid);
		}	
		if(studentid==0){ 
			alert("Please Select Student");
			return false;
		}
		dojo.xhrPost({
			url:url_student,
			content:{
				'studentid':studentid
				},
			handleAs:"json",
			load: function(data) {
				dijit.byId("gender").attr("value",data.sex);
				dijit.byId("from_group").attr("value",data.group_id);
			},
			error: function(err) {
				alert(err);
			}
		});
	}
var url_to_group = '<?php echo $this->url(array('module'=>'foundation','controller'=>'studentchangegroup','action'=>'get-to-group')); ?>';
function toStudentGroup(type){
		if(type==1){
			togroup = dijit.byId('from_group').get('value');
		}else{
			togroup = dijit.byId('to_group').get('value');
		}
		dojo.xhrPost({
			url:url_to_group,
			content:{
				'to_group':togroup
				},
			handleAs:"json",
			load: function(data) {
				if(type==1){
					dojo.byId('lblfromgroup').innerHTML='<span style="color:red;"><?php echo $tr->translate("ACADEMIC_YEAR")?> :  </span>'+data.year+"&nbsp;&nbsp;,&nbsp;&nbsp;"+'<span style="color:red;">  <?php echo $tr->translate("DEGREE")?> :  </span>'+data.degree+"&nbsp;&nbsp;,&nbsp;&nbsp;"+'<span style="color:red;">  <?php echo $tr->translate("GRADE")?> :  </span>'+data.grade+"<br />"+'<span style="color:red;">  <?php echo $tr->translate("SESSION")?> :  </span>'+data.session+"&nbsp;&nbsp;,&nbsp;&nbsp;"+'<span style="color:red;">  <?php echo $tr->translate("START_DATE")?> :  </span>'+data.start_date+"&nbsp;&nbsp;,&nbsp;&nbsp;"+'<span style="color:red;">  <?php echo $tr->translate("EXPIRE_DATE")?> :  </span>'+data.expired_date;
				}else{
					dojo.byId('lbltogroup').innerHTML='<span style="color:red;"><?php echo $tr->translate("ACADEMIC_YEAR")?> :  </span>'+data.year+"&nbsp;&nbsp;,&nbsp;&nbsp;"+'<span style="color:red;">  <?php echo $tr->translate("DEGREE")?> :  </span>'+data.degree+"&nbsp;&nbsp;,&nbsp;&nbsp;"+'<span style="color:red;">  <?php echo $tr->translate("GRADE")?> :  </span>'+data.grade+"<br />"+'<span style="color:red;">  <?php echo $tr->translate("SESSION")?> :  </span>'+data.session+"&nbsp;&nbsp;,&nbsp;&nbsp;"+'<span style="color:red;">  <?php echo $tr->translate("START_DATE")?> :  </span>'+data.start_date+"&nbsp;&nbsp;,&nbsp;&nbsp;"+'<span style="color:red;">  <?php echo $tr->translate("EXPIRE_DATE")?> :  </span>'+data.expired_date;
				}
			},
			error: function(err) {
				alert(err);
			}
		});
	}
