		branch_id.on('change', function(evt) {
			 getallstudentname();
			 getAllGroupByBranch();
		});
		  
	});
	
	var url_student = '<?php echo $this->url(array('module'=>'foundation','controller'=>'register','action'=>'getstudentstudyinfo')); ?>';
	function getStudentInfo(){
		studentid = dijit.byId('studentid').get('value');
		if(studentid==0 || studentid==0){ 
			dijit.byId('studentid').focus();
			return false;
		}
		dojo.xhrPost({
			url:url_student,
			content:{
				'study_id':studentid
				},
			handleAs:"json",
			load: function(data) {
				dijit.byId("gender").attr("value",data.sex);
				dijit.byId("from_group").attr("value",data.group_id);
				dijit.byId('from_grade').attr("value",data.grade);
			},
			error: function(err) {
				
			}
		});
	}

	 
	function popupAddGroup(){
		id = dijit.byId('to_group').get('value');
		if(id==-1){
			window.open('<?php echo Zend_Controller_Front::getInstance()->getBaseUrl()."/foundation/group/add";?>','_blank');
		}
	}
	url_getgroup = '<?php echo $this->url(array('module'=>'foundation','controller'=>'group','action'=>'getallgroup'));?>';
	function getAllGroupByBranch(typeFrom=0){
		dijit.byId('to_group').reset();
		branch_id = dijit.byId('branch_id').get('value');
		if(branch_id=='' || branch_id==-1){
			var group_store  = getDataStorefromJSON('id','name',<?php print_r(Zend_Json::encode(array()));?> );
			dijit.byId('to_group').set('store',group_store);  
			dijit.byId('from_group').set('store',group_store);  
			dijit.byId('branch_id').focus();
			return false;
		}
		fromGroup="";
		fromGrade="";
		if(typeFrom!=0){
			fromGroup=dijit.byId('from_group').get('value');
			fromGrade=dijit.byId('from_grade').get('value');
		}
		dojo.xhrPost({
			url: url_getgroup,
			content:{
				'branch_id':branch_id,
				'group_id':fromGroup,
				'grade':fromGrade
				},
			handleAs:"json",
			load: function(data) {
			    group_store  = getDataStorefromJSON('id','name', data);
			    dijit.byId('to_group').set('store',group_store);   
			    if(typeFrom==0){
			   	 dijit.byId('from_group').set('store',group_store);   
			    }
			},
			error: function(err) {
			}
		});
	}
	function getallstudentname(){//
		var url_data = '<?php echo $this->url(array('module'=>'foundation','controller'=>'register','action'=>'getallstudentdata')); ?>';
		dijit.byId('from_group').reset();
		dijit.byId('studentid').reset();
		branch_id = dijit.byId("branch_id").attr("value");
		if(branch_id=='' || branch_id==-1){
			var student_store  = getDataStorefromJSON('id','name',<?php print_r(Zend_Json::encode(array()));?> );
			dijit.byId('studentid').set('store',student_store);  
			dijit.byId('branch_id').focus();
			return false;
		}
		loadingBlock();
		dojo.xhrPost({
			url:url_data,
			content:{
				'branch_id':branch_id
			},
			handleAs:"json",
			load: function(data) {
				student_store  = getDataStorefromJSON('id','name', data);
			    dijit.byId('studentid').set('store',student_store);  
			    HideloadingBlock();
			},
			error: function(err) {
			}
		});
	}
	
	function getRefreshGroup(){
		getAllGroupByBranch(1);
	}
</script>
