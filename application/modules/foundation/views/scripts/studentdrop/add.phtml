var url_student = '<?php echo $this->url(array('module'=>'foundation','controller'=>'register','action'=>'getstudentstudyinfo')); ?>';
function getStudentInfo(){
	dijit.byId('group').reset();
	studentid = dijit.byId('studentid').get('value');
	if(studentid==''){
		alert("Please Select Student");
		return false;
	}
	dojo.xhrPost({
		url:url_student,
		content:{
			'study_id':studentid
			},
		handleAs:"json",
		load: function(data) { 
			dijit.byId("gender").attr("value",data.sex);
			dijit.byId('gender').set('readOnly',true);
			dijit.byId("academic_year").attr("value",data.academic_year);
			dijit.byId('academic_year').set('readOnly',true);
			if(data.calture>0){
				dijit.byId("calture").attr("value",data.calture);
			}
			if(data.session>0){
				dijit.byId("session").attr("value",data.session);
			}
			dijit.byId('calture').set('readOnly',true);
			dijit.byId('session').set('readOnly',true);
			if(data.group_id>0){
				dijit.byId("group").attr("value",data.group_id);
				dijit.byId('group').set('readOnly',true);
			}
			dijit.byId('degree').set('value',data.degree);
			dijit.byId('degree').set('readOnly',true);
			setTimeout(function () {
				dijit.byId('grade').set('value',data.grade);
				dijit.byId('grade').set('readOnly',true);
		    }, 500);
		    
			
			if(data.room>0){
				dijit.byId('room').set('value',data.room);
			}
			dijit.byId('room').set('readOnly',true);
		},
		error: function(err) {
		}
	});
}
