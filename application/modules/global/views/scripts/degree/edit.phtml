function calculateTotalAverage() {
	var total_score = 0;
	var max_average = 0;
	var pass_average = 0;
	var identity = $('#identity').val();
	var arrays = identity.split(',');
	for(var i=0;i<arrays.length;i++){
		total_score += parseFloat(dijit.byId('scoreinclass_'+arrays[i]).get('value'));
	}

	amount_subject = arrays.length;
	max_average = total_score / amount_subject;
	pass_average = max_average / 2;

	dijit.byId('max_average').attr('value',max_average.toFixed(2));
	dijit.byId('pass_average').attr('value',pass_average.toFixed(2));
	
