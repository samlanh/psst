		dojo.xhrPost({
				url:url_add_subject,
				form: dojo.byId("frm_subject"),
				handleAs:"json",
				load: function(data) {
					var Itemmake = { 
					    	 id: data,
						     name: dijit.byId('subject_kh').get('value')
						   };
				   addDataToSelectbox(dijit.byId('subject_id'), subject_store, Itemmake, data);
				   dijit.byId('frm_subject').reset();
				   dijit.byId("popupsubject").hide();
				   dijit.byId('save_subject').set('disabled',false);		
				},
				error: function(xhr, status, error) {
					dijit.byId('save_subject').set('disabled',false);	
				}
		});
	}
}

