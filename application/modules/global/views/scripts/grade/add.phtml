function deleteRecord(index) {
	var identity = $('#identity').val();
	var arrays = identity.split(',');
	for(var i=0;i<arrays.length;i++) {
	if(arrays[i] == index) arrays.splice(i,1);
	}
	var strings = arrays.join(',');
	$('#identity').val(strings);
	dojo.query("#row"+index).remove();
}

var url_add_dept = '<?php echo $this->url(array("module"=>"global","controller"=>"grade","action"=>"add-dept")); ?>';
function addDept(){
	if(dijit.byId('frm_add_dep').validate()){
		dojo.xhrPost({
			url:url_add_dept,
			form: dojo.byId("frm_add_dep"),
			handleAs:"json",
			load: function(data) {
				//alert(data); 
				var Itemmake = { 
				    	 id: data,
					     name: dijit.byId('fac_enname').get('value')
					   };
		   addDataToSelectbox(dijit.byId('dept'), dept_store, Itemmake, data);
		   dijit.byId('frm_add_dep').reset();
		   dijit.byId("popup_add_dept").hide();	
			},
			error: function(err) {
				alert(err);
			}
		});
	}
}

var url_add_subject = '<?php echo $this->url(array("module"=>"global","controller"=>"subject","action"=>"addsubjectajax")); ?>';
function addSubjectajax(){
