var url_add_dept = '<?php echo $this->url(array("module"=>"global","controller"=>"grade","action"=>"add-dept")); ?>';

function addDept(){
	if(dijit.byId('frm_add_dep').validate()){
		dojo.xhrPost({
			url:url_add_dept,
			form: dojo.byId("frm_add_tran"),
