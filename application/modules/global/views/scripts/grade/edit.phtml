				//alert(data); 
				var Itemmake = { 
				    	 id: data,
					     name: dijit.byId('fac_enname').get('value')
					   };
		   addDataToSelectbox(dijit.byId('dept'), dept_store, Itemmake, data);
		   dijit.byId('frm_add_tran').reset();
		   dijit.byId("popup_add_dept").hide();
				
			},
			error: function(err) {
				alert(err);
			}
		});
	}
}
