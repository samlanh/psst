<script type="text/javascript">
	var url_get_teacher_id = '<?php echo $this->url(array("module"=>"global","controller"=>"lecturer","action"=>"get-teacher-id")); ?>';
	function getTeacherID(){
		dojo.xhrPost({
			url:url_get_teacher_id,
			handleAs:"json",
			load: function(data) {
				dijit.byId('code').attr('value',data);
			},
			error: function(err) {
				alert(err);
			}
		});
	}
	function submitDataClose(){
		if(dojo.byId('password').value != dojo.byId('confirm_password').value ){
			alert('សូម​ពិនិត្រ ពាក្យ​​សំងាត់​ទាំង​ 2 របស់​អ្នក មិន​ដូច​គ្នា​ទេ, សូម​បញ្ចូល ​ម្តង​ទៀត..');
			dojo.byId('password').value = '';
			dojo.byId('confirm_password').value = '';
			dijit.byId('password').focus();
			return false;
		}	
		if(dijit.byId('frm_add_tran').validate()) {
			degree=dijit.byId('degree').get('value');
			if(degree==''){
				alert('Please Select Degree!');
				return false;
			}
			dijit.byId("save_new").attr("disabled",true);	
			dijit.byId("save_close").attr("disabled",true);		
			var url_submit = '<?php echo $this->url(array('module'=>'global','controller'=>'lecturer','action'=>'add')); ?>';
			dojo.xhrPost({
			    url: url_submit,	
				form: dojo.byId("frm_add_tran"),		    
				load: function(data) {
					alert('<?php echo $tr->translate('INSERT_SUCCESS');?> !');
					window.location.href ="<?php echo $this->baseUrl();?>/global/lecturer";
				},
				error: function(e) {
				}
			});
		}
	}

	function readURL(input) {
	    if (input.files && input.files[0]) {
	        var reader = new FileReader();
	        
	        reader.onload = function (e) {
	            $('#profile_wiew').attr('src', e.target.result);
	        }
	        reader.readAsDataURL(input.files[0]);
	    }
	}
	var maxSize = 0;
	$("#photo").change(function(){
	    readURL(this);
	});
</script>