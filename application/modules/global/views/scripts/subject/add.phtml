var degree_store  = getDataStorefromJSON('id','name', <?php print_r(Zend_Json::encode($this->degree_store));?> );

require(["dojo/ready"], function(ready){
	dojo.ready(function(){
		new dijit.form.FilteringSelect({
		    store: degree_store,
		    autoComplete: true,                        
		    required: true,
		    id: "access_type",
		    name: "access_type",           
		    class: "full height-text", 
		    placeHolder:"Select Degree",          
		    onChange: function() {  
		    	dept_id = dijit.byId('access_type').get('value');
		    	if(dept_id==-1){
		    			dijit.byId("popup_add_degree").show();		    		
			    }
		    }
		}, "access_type");
	});
	ready(function(){
		getValue();
		dijit.byId("parent").set('readOnly',true);
	});
});
function getValue(){
	var par='';
	if(dojo.byId('is_parent').checked){
		par = 1;
		dijit.byId('parent').attr('value','');
		dijit.byId("parent").set('readOnly',true);
		dijit.byId('parent').set('required',false);  
	}else{
		par=0;
		dijit.byId("parent").set('readOnly',false);
		dijit.byId('parent').set('required',true);  
	}
	$('#par').val(par);
}
var url_add_dept = '<?php echo $this->url(array("module"=>"global","controller"=>"grade","action"=>"add-dept")); ?>';
function addDept(){
	if(dijit.byId('frm_degree').validate()) {
			dojo.xhrPost({
				url:url_add_dept,
				form: dojo.byId("frm_degree"),
				handleAs:"json",
				load: function(data) {
					var Itemmake = { 
					   	 id: data,
						 name: dijit.byId('fac_enname').get('value')
					};
				addDataToSelectbox(dijit.byId('access_type'), degree_store, Itemmake, data);
				dijit.byId('frm_degree').reset();
				dijit.byId("popup_add_degree").hide();
			},
			error: function(err) {
			}
		});
	}
}
function submitDataClose(){
	if(dijit.byId('add_subject_exam').validate()) {
		dijit.byId('save_close').set('disabled',true);
		dijit.byId('save_new').set('disabled',true);
		var url_submit = '<?php echo $this->url(array('module'=>'global','controller'=>'subject','action'=>'add')); ?>';
		dojo.xhrPost({
		    url: url_submit,	
			form: dojo.byId("add_subject_exam"),		    
			load: function(data) {
				alert('<?php echo $tr->translate('INSERT_SUCCESS');?> !');
				window.location.href ="<?php echo $this->baseUrl();?>/global/subject";
			},
			error: function(e) {
			}
		});
	}
}
