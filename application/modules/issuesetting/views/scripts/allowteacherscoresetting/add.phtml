<script type="text/javascript">
	dojo.require("dojo.NodeList-manipulate");
	dojo.require("dijit.form.Textarea");
	dojo.require('dijit.form.NumberTextBox');
	dojo.require("dojo.data.ItemFileWriteStore");
	dojo.require("dijit.form.DateTextBox");

	var teacher_store = getDataStorefromJSON('id', 'name', <?php print_r(Zend_Json::encode(array())); ?>);
	var group_store = getDataStorefromJSON('id', 'name', <?php print_r(Zend_Json::encode(array())); ?>);
	var subject_store = getDataStorefromJSON('id', 'name', <?php print_r(Zend_Json::encode(array())); ?>);

	dojo.ready(function() {
		new dijit.form.FilteringSelect({
			store: teacher_store,
			queryExpr: "*${0}*",
			autoComplete: false,
			required: true,
			id: "teacher_id",
			name: "teacher_id",
			class: "fullside",
			placeHolder: "<?php echo $tr->translate("SELECT_TEACHER"); ?>",
			onChange: function() {
				teacher_id = dijit.byId('teacher_id').get('value');
				if (teacher_id == -1) {
					$("#tow_value").val(-2)
					window.open('<?php echo Zend_Controller_Front::getInstance()->getBaseUrl() . "/foundation/lecturer/add?rightclick=true"; ?>', '_blank');
				}
			}
		}, "teacher_id");


		new dijit.form.FilteringSelect({
			store: group_store,
			queryExpr: "*${0}*",
			autoComplete: false,
			id: "group",
			name: "group",
			class: 'fullside',
			readonly: false,
			required: true,
			placeHolder: "<?php echo $tr->translate("SELECT_GROUP"); ?>",
			onChange: function() {
				getRefreshTeacher();
				getAllSubjectByGroup();
			}
		}, "group");

		new dijit.form.FilteringSelect({
			store: subject_store,
			queryExpr: "*${0}*",
			autoComplete: false,
			id: "subject",
			name: "subject",
			class: 'fullside',
			readonly: false,
			required: true,
			placeHolder: "<?php echo $tr->translate("SELECT_SUBJECT"); ?>",
			onChange: function() {
			}
		}, "subject");

		var branch_id = dijit.byId('branch_id');
		branch_id.on('change', function(evt) {
			getRefreshTeacher();
			getAllGroupByBranch();
		});
		var academic_year = dijit.byId('academic_year');
		academic_year.on('change', function(evt) {
			getAllGroupByBranch();
		});
		var degree = dijit.byId('degree');
		degree.on('change', function(evt) {
			getAllGroupByBranch();
		});
	});

	var url_gettecher = '<?php echo $this->url(array("module" => "foundation", "controller" => "lecturer", "action" => "getteacher")); ?>';

	function getRefreshTeacher() {
		branch_id = dijit.byId('branch_id').get('value');
		group = dijit.byId('group').get('value');
		if (branch_id == '' || branch_id == -1) {
			var teacher_store = getDataStorefromJSON('id', 'name', <?php print_r(Zend_Json::encode(array())); ?>);
			dijit.byId('teacher_id').set('store', teacher_store);
			return false;
		}
		dojo.xhrPost({
			url: url_gettecher,
			content: {
				'branch_id': branch_id,
				'groupId': group,
				'hideAddnew': 1,
			},
			handleAs: "json",
			load: function(data) {
				teacher_storeass = getDataStorefromJSON('id', 'name', data);
				dijit.byId('teacher_id').set('store', teacher_storeass);
				HideloadingBlock();

			},
			error: function(err) {
				HideloadingBlock();
			}
		});
	}

	url_getgroup = '<?php echo $this->url(array('module' => 'foundation', 'controller' => 'group', 'action' => 'getallgroup')); ?>';

	function getAllGroupByBranch() {
		dijit.byId('group').reset();
		branch_id = dijit.byId('branch_id').get('value');
		if (branch_id == '' || branch_id == -1) {
			var group_store = getDataStorefromJSON('id', 'name', <?php print_r(Zend_Json::encode(array())); ?>);
			dijit.byId('group').set('store', group_store);
			dijit.byId('branch_id').focus();
			return false;
		}
		academic_year = dijit.byId('academic_year').get('value');
		if (academic_year == '' || degree == -1) {
			academic_year = "";
		}
		degree = dijit.byId('degree').get('value');
		if (degree == '' || degree == -1) {
			degree = "";
		}
		dojo.xhrPost({
			url: url_getgroup,
			content: {
				'branch_id': branch_id,
				'academic_year': academic_year,
				'degree': degree,
				'noaddnew': 1,
				'forfilter': 1
			},
			handleAs: "json",
			load: function(data) {
				group_store = getDataStorefromJSON('id', 'name', data);
				dijit.byId('group').set('store', group_store);
			},
			error: function(err) {}
		});
	}

	url_getsubject = '<?php echo $this->url(array('module' => 'issuesetting', 'controller' => 'allowteacherscoresetting', 'action' => 'getsubjectbygroup')); ?>';

	function getAllSubjectByGroup() {
		dijit.byId('subject').reset();
		group = dijit.byId('group').get('value');
		if (group == '' || group == -1) {
			var subject_store = getDataStorefromJSON('id', 'name', <?php print_r(Zend_Json::encode(array())); ?>);
			dijit.byId('subject').set('store', subject_store);
			dijit.byId('group').focus();
			return false;
		}
	
		dojo.xhrPost({
			url: url_getsubject,
			content: {
				'group': group,
			},
			handleAs: "json",
			load: function(data) {
				subject_store = getDataStorefromJSON('id', 'name', data);
				dijit.byId('subject').set('store', subject_store);
			},
			error: function(err) {}
		});
	}

	function checkall() {
		if ($('#check_all').is(':checked')) {
			$(".checkbox").prop('checked', true);
		} else {
			$(".checkbox").prop('checked', false);
		}
	}
</script>