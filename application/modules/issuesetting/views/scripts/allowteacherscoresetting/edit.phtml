					string+='	<?php echo $tr->translate('CHECK_ALL');?>';
					string+='	</label>';
					string+='</div>';
					string+='<div class="form-group">';
					string+='	<ul class="optListRow">';
						for(i=0;i<subjectArray.length;i++){
							var checkeed="";
							for(j=0; j<myArray.length; j++){
