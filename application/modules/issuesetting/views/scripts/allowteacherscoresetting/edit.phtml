	function getAllSubjectByGroup() {
	
		group = dijit.byId('group').get('value');
		if (group == '' || group == -1) {

			dijit.byId('group').focus();
			return false;
		}
		teacher_id = dijit.byId('teacher_id').get('value');
		if (teacher_id == '' || teacher_id == -1) {
			return false;
		}
	
		dojo.xhrPost({
			url: url_getsubject,
			content: {
				'groupId'	: group,
				'teacherId' : teacher_id,
			},
			handleAs: "json",
			load: function(data) {
				var string='';
				if(data!=''){
					var expppp =" <?php echo $rs['subjectId']; ?>";
