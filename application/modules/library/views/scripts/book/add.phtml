var url_make = '<?php echo $this->url(array('module'=>'library','controller'=>'book','action'=>'add-category')); ?>';
var book_store  = getDataStorefromJSON('id','name', <?php print_r(Zend_Json::encode($this->cat))?>);
function addCategory(){
	
	if(dijit.byId('frm_category').validate()){
		dojo.xhrPost({
			url:url_make,
			form: dojo.byId("frm_category"),
			handleAs:"json",
			load: function(data) {
				var Itemcat = {					
						id: data,
					    name: dijit.byId('cat_name').get('value')
				};			
				addDataToSelectbox(dijit.byId('cat_id'), book_store, Itemcat, data);
				dijit.byId('frm_category').reset();
				dijit.byId("pop_category").hide();
			},
			error: function(err) {
				alert(err);
			}
		});
	}
}

var url_add_block = '<?php echo $this->url(array('module'=>'library','controller'=>'book','action'=>'add-block')); ?>';
var cat_store  = getDataStorefromJSON('id','name', <?php print_r(Zend_Json::encode($this->block))?>);
function addBlock(){
	 
	if(dijit.byId('frm_popup_block').validate()){
		dojo.xhrPost({
			url:url_add_block,
			form: dojo.byId("frm_popup_block"),
			handleAs:"json",
			load: function(data) {
				var Itemcat = {					
						id: data,
						name: dijit.byId('block_name').get('value')
				};			
				addDataToSelectbox(dijit.byId('block_id'), cat_store, Itemcat, data);
				dijit.byId('frm_popup_block').reset();
				dijit.byId("pop_block").hide();
			},
			error: function(err) {
				alert(err);
			}
		});
	}
	 
}

function hideCategory(){
	dijit.byId('frm_category').reset();
	dijit.byId("pop_category").hide();
}
function hideBlock(){
	dijit.byId('frm_popup_block').reset();
	dijit.byId("pop_block").hide();
}
function loading(){
    document.getElementsByClassName("overlay")[0].style.display="block";
}

var col = 0;
var no = 0;
var title = 0;
tmp = '';
temp='';
function addRow() {
	serial_no = dijit.byId('serial_no').get('value');
	barcode = dijit.byId('barcode').get('value');
	note = dijit.byId('note').get('value');

	if(serial_no=="" || barcode==""){
		alert("<?php echo $tr->translate("Please Enter Serial No !!! ");?>");
		dijit.byId('serial_no').focus();
		return false;
	}
	col++;no++;
	template='';
	if(title!=1){
		temp+='<th><?php echo $tr->translate("DEL");?></th>';
		temp+='<th><?php echo $tr->translate("N_O");?></th>';
		temp+='<th ><?php echo $tr->translate("SERIAL");?></th>';
		temp+='<th ><?php echo $tr->translate("BAR_CODE");?></th>';
		temp+='<th ><?php echo $tr->translate("NOTE");?></th>';
		dojo.query("#head-title").append(temp);
		title=1;
	}
		template+='<td width="5%"align="center"><img onclick="deleteRecord('+col+')" src="<?php echo $this->baseUrl();?>/images/Delete_16.png"></td>';
		template+='<td width="5%" align="center">'+no+'</td>';
		template+='<td width="27%">&nbsp;<input placeholder="<?php echo $tr->translate("SERIAL");?>" required="1" dojoType="dijit.form.TextBox" class="fullside" name="serial_'+col+'" id="serial_'+col+'" value="'+serial_no+'" type="hidden">'+serial_no+'&nbsp;</td>';	
		template+='<td width="27%">&nbsp;<input placeholder="<?php echo $tr->translate("BAR_CODE");?>" required="1" dojoType="dijit.form.TextBox" class="fullside" name="barcode_'+col+'" id="barcode_'+col+'" value="'+barcode+'" type="hidden">'+barcode+'&nbsp;</td>';	
		template+='<td width="36%">&nbsp;<input placeholder="<?php echo $tr->translate("NOTE");?>" required="1" dojoType="dijit.form.TextBox" class="fullside" name="note_'+col+'" id="note_'+col+'" value="'+note+'" type="hidden">'+note+'&nbsp;</td>';
	tmp='<tr id="row'+col+'">';
	tmp+="</tr>";
	dojo.query("#table_row").append(tmp);

	if($("#identity").val()!="") {
		var identity = $("#identity").val();
		$("#identity").val(identity+','+col);
	} else {$("#identity").val(col);}
	dojo.html.set(dojo.byId("row"+col),template , {
	     parseContent: true,
	});

	serial_no = dijit.byId('serial_no').set('value','');
	barcode = dijit.byId('barcode').set('value','');
	note = dijit.byId('note').set('value','');
}

