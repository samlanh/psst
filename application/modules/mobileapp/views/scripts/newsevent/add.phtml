<script>
dojo.require("dijit/Editor");
</script>

<style>
 #dijitEditorBody {
    height: 100%;
    width: 100%;
    overflow: hidden;
    background: white;
}
</style>

<form  id='add_room' action="" dojoType="dijit.form.Form" method="post" enctype="application/x-www-form-urlencoded">
<script type="dojo/method" event="onSubmit">			
			if(this.validate()) {
                dijit.byId("save_close").attr("disabled",true);
				dijit.byId("save_new").attr("disabled",true);
				return true;
			}else {
				return false;
			}
</script>
<table cellspacing="10" width="80%" style="margin: 0 auto;">
	<tr>
		<td>
		<fieldset style="background-color:menu;">
					<legend align="center" ><strong>ព័ត៏មាន</strong></legend>
					<table style="margin: 0 auto; width: 95%;" cellspacing="10">
						<tr>
							<td style="width: 100px">ចំណងជើង</td>
							<td><input dojoType="dijit.form.ValidationTextBox" required="true" class="fullside" id="title" name="title" value="" type="text"></td>
						</tr>						             
                        <tr>
							<td style="width: 100px">ពណ៍នា</td>
							<td><textarea data-dojo-type="dijit/Editor" id="description" name="description"></textarea></td>
						</tr>                        
						<tr>
							<td colspan="2" align="center">
								<input iconClass="dijitIconClear" type="reset" value="សំអាត" label="សម្អាត" dojoType="dijit.form.Button"/>
								<input type="button" value="save_close" name="save_close" id="save_close" label="រក្សាទុក&ចាកចេញ" dojoType="dijit.form.Button" iconClass="dijitEditorIcon dijitEditorIconSave" />
								<input type="submit" value="save_new" name="save_new" id="save_new" label="រក្សាទុក&បន្ថែមថ្មី" dojoType="dijit.form.Button" 
									iconClass="dijitEditorIcon dijitEditorIconSave" />
							</td>
						</tr>
					</table>	
		</fieldset>		
		</td>
	</tr>
</table>	
</form>
