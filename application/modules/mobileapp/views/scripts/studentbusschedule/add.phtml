<script>

	dojo.require("dijit.form.DateTextBox");
	dojo.require("dojo.data.ItemFileWriteStore");  
	dojo.require("dojo.NodeList-manipulate");
	dojo.require("dojo.data.ObjectStore");

	var bus_store  = getDataStorefromJSON('id','name', <?php print_r(Zend_Json::encode(array()));?> );
	dojo.ready(function(){ 
		new dijit.form.FilteringSelect({
			store: bus_store,
			queryExpr: "*${0}*",
			autoComplete: false,                     
			required: true,
			id: "studentBus",
			name: "studentBus",           
			class: "fullside", 
			placeHolder:"<?php echo $tr->translate("SELECT_BUS");?>",          
			onChange: function() {  
				
			}
		}, "studentBus");	
		getAllStudenBus();
	});

	url_getstudentBus= '<?php echo $this->url(array('module'=>'mobileapp','controller'=>'studentbus','action'=>'getbusbybranch'));?>';
	function getAllStudenBus(){
		dijit.byId('studentBus').reset();
		branch_id = dijit.byId('branch_id').get('value');
	
		if(branch_id=='' || branch_id==-1){
			var bus_store  = getDataStorefromJSON('id','name',<?php print_r(Zend_Json::encode(array()));?> );
			dijit.byId('studentBus').set('store',bus_store);  
			dijit.byId('branch_id').focus();
			return false;
		}
		dojo.xhrPost({
			url: url_getstudentBus,
			content:{
				'branch_id':branch_id
				},
			handleAs:"json",
			load: function(data) {
				bus_store  = getDataStorefromJSON('id','name', data);
				dijit.byId('studentBus').set('store',bus_store);   
			},
			error: function(err) {
			}
		});
	}

</script>