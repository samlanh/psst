				dijit.byId('cate_income').focus();
				return false;
			}
			payment_method = dijit.byId('payment_method').get('value')
			if(payment_method==-1){
				alert("Please select payment method !!! ");
				dijit.byId('payment_method').focus();
				return false;
			}
		///////////////////////////////////////////////////////////////////////////////////	
			
			if(new_receipt==''){
				getReceiptNumber(1);
			}else{
				dojo.byId("lb_receipt_no").innerHTML = new_receipt;
			}

			
			cate_income = dijit.byId('cate_income').get('value');
			if(cate_income==0){
				dojo.byId("lb_cate_income").innerHTML = "";
			}else{
				dojo.byId("lb_cate_income").innerHTML = dijit.byId("cate_income").attr('displayedValue');
			}
			
			dojo.byId("lb_title").innerHTML = dijit.byId("title").get('value');

			payment_method = dijit.byId('payment_method').get('value');
			if(payment_method==-1){
				dojo.byId("lb_payment_method").innerHTML = "";
			}else{
				dojo.byId("lb_payment_method").innerHTML = dijit.byId("payment_method").attr('displayedValue');
			}

			dojo.byId("lb_total_income").innerHTML = "$ "+dijit.byId("total_income").get('value').toFixed(2);

			var d = dijit.byId("date").get('value');
			 if(d!=null){
				 var day = d.getDate();
				 var mon = d.toDateString().substr(4,3);
				 var year = d.getFullYear();
				 dojo.byId("lb_date").innerHTML  = day+'/'+mon+'/'+year;
			 }else{
				 dojo.byId("lb_date").innerHTML  = '';
			 }

			dojo.byId("lb_cheqe_no").innerHTML = dijit.byId("cheqe_no").get('value'); 
			dojo.byId("lb_note").innerHTML = dijit.byId("note").get('value');
			

			dijit.byId("terms").show();	
		}
	}


