			}else{
				dojo.byId("lb_cate_income").innerHTML = dijit.byId("cate_income").attr('displayedValue');
			}
			dojo.byId("lb_title").innerHTML = dijit.byId("title").get('value');

			payment_method = dijit.byId('payment_method').get('value');
