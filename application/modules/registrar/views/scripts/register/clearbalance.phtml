	function calculateBalance(){
		total_balance = parseFloat(dijit.byId("total_balance").get('value'));
		paid_amount = parseFloat(dijit.byId("paid_amount").get('value'));
		if(total_balance>=paid_amount){
			balance = total_balance - paid_amount;
			dijit.byId("balance").attr('value',balance);
		}else{
			alert("Can not paid more than total amount !!! ");
			dijit.byId("paid_amount").attr('value',total_balance);
			dijit.byId("balance").attr('value',0);
		}
	}
	function printReceipt(new_receipt){
		if(dijit.byId('office_receipt').validate()) {
		
		//////////////////////////////////// check validate ///////////////////////////////
			paid_amount = dijit.byId('paid_amount').get('value')
