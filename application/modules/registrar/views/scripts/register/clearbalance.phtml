		///////////////////////////////////////////////////////////////////////////////////	
			
			dojo.byId("lb_stu_code").innerHTML = dijit.byId("stu_code").get('value');
			dojo.byId("lb_name_kh").innerHTML = dijit.byId("name_kh").get('value');
			dojo.byId("lb_name_en").innerHTML = dijit.byId("name_en").get('value');
			dojo.byId("lb_on_receipt").innerHTML = dijit.byId("on_receipt").get('value');
			dojo.byId("lb_date_balance").innerHTML = dijit.byId("paid_date").get('value');
			
			
			if(new_receipt==''){
				getReceiptNo(1);
			}else{
				dojo.byId("lb_receipt_no").innerHTML = new_receipt;
			}
			//dojo.byId("lb_receipt_no").innerHTML = dijit.byId('receipt').get('value');
			dojo.byId("lb_total_balance").innerHTML = "$ "+dijit.byId('total_balance').get('value');
