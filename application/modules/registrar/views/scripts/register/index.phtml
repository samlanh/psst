	function updateReceipt(){
		let urlUpdateInfo = '<?php echo $this->url(array('module'=>'registrar','controller'=>'register','action'=>'edit'));?>';
		
		if(dijit.byId('updateFormInfo').validate()){
				if (confirm('<?php echo $tr->translate("CONFIRM_VOID")?>')) {
			    } else {
					dijit.byId('updateFormInfo').reset();
					dijit.byId('updateForm').hide();
			    	 return false;
			    }
			loadingBlock();
			dojo.xhrPost({
				url: urlUpdateInfo,
				form: dojo.byId("updateFormInfo"),
				handleAs:"json",
				load: function(data) {
					dijit.byId('updateFormInfo').reset();
					dijit.byId('updateForm').hide();
					if(data==1){
						alert('<?php echo $tr->translate("VOID_SUCCESS")?>');
						location.reload();
					}else if(data==2){
						alert('<?php echo $tr->translate("NO_RECORD")?>');
					}else if(data==3){
						alert('<?php echo $tr->translate("RECEIPT_WAS_VOID")?>');
					}else if(data==5){
						alert('<?php echo $tr->translate("RECEIPT_EXISTING_VOID")?>');
					}else{
						alert('<?php echo $tr->translate("VOID_UNSUCCESS")?>');
					}
					dijit.byId('reason').set('value','');
					HideloadingBlock();
				},
				error: function(err) {
				}
			});
		}
	}
	
	
	var oldBranch = "<?php echo $this->adv_search['branch_id']?>";
	function getAllAcademicByBranch(){
		let url_getacademic= '<?php echo $this->url(array('module'=>'accounting','controller'=>'fee','action'=>'getfeeid'));?>';
		dijit.byId('study_year').reset();
		branch_id = dijit.byId('branch_id').get('value');
		if(branch_id=='' || branch_id==-1){
			var academic_store  = getDataStorefromJSON('id','name',<?php print_r(Zend_Json::encode(array()));?> );
			dijit.byId('study_year').set('store',academic_store);  
			dijit.byId('branch_id').focus();
			return false;
		}
		dojo.xhrPost({
			url: url_getacademic,
			content:{
				'branch_id':branch_id,
				'selectOption':1
				},
			handleAs:"json",
			load: function(data) {
				academic_store  = getDataStorefromJSON('id','name', data);
			    dijit.byId('study_year').set('store',academic_store);  
			    if(oldBranch==branch_id){
			    	dijit.byId('study_year').set('value','<?php echo $this->adv_search['study_year']?>');  
			    }
			},
			error: function(err) {
			}
		});
	}
	var grade_store  = getDataStorefromJSON('id','name', <?php print_r(array())?> );
	function getallGrade(){
		let url_dept = '<?php echo $this->url(array('module'=>'global','controller'=>'grade','action'=>'get-grade')); ?>';
		
		dept_id = dijit.byId('degree').get('value');
		if(dept_id==''){return false;}
		dojo.xhrPost({
			url:url_dept,
			content:{
				'dept_id':dept_id,
				'noaddnew':1
				},
			handleAs:"json",
			load: function(data) {
				grade_store  = getDataStorefromJSON('id','name', data);
				dijit.byId('grade_all').set('store',grade_store);   
				dijit.byId('grade_all').attr('value','<?php echo $this->adv_search['grade_all']?>');  
			},
			error: function(err) {
			}
		});
	}
