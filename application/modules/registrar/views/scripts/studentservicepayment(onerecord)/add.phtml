function calculateTotalPayment(){
	service_fee = dijit.byId('service_fee').get('value');
	qty = dijit.byId('qty').get('value');
	qty = isNaN(qty)?1:qty;
	service_fee = service_fee * qty;
	discount = dijit.byId('discount').get('value');
	discount = isNaN(discount)?0:discount;
	dijit.byId('total_payment').attr('value',service_fee-(service_fee*discount/100));
	dijit.byId('paid_amount').attr('value',service_fee-(service_fee*discount/100));
	calculatBalanceAndReturn();
}

function calculatBalanceAndReturn(){
