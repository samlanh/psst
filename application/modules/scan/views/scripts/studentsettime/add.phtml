function getallstudentname(){//
	var url_data = '<?php echo $this->url(array('module'=>'registrar','controller'=>'register','action'=>'getallstudent')); ?>';
	dijit.byId("old_stu").reset();
	customer_type = dijit.byId("customer_type").attr("value");
	branch_id = dijit.byId("branch_id").attr("value");
	if(branch_id==''){
		dijit.byId("branch_id").focus();
		return false;
	}
	dojo.xhrPost({
		url:url_data,
		content:{
			'student_name':1,
			'branch_id':branch_id,
			'customer_type':customer_type
		},
		handleAs:"json",
		load: function(data) {
		    dijit.byId('old_stu').set('store',getDataStorefromJSON('id','name', data));  
		},
		error: function(err) {
		}
	});
}

var template = '';
var col = 0;
var no = 0;
var title = 0;
tmp = '';
temp='';
function addRecord() {
	
		branch_id = dijit.byId("branch_id").attr("value");
		if(branch_id==''){
			alert("<?php echo $tr->translate("SELECT_BRANCH");?>");
			dijit.byId("branch_id").focus();
			return false;
		}
	
		studentName = dijit.byId('old_stu').get('value');
		if(studentName==''){
			alert("<?php echo $tr->translate("SELECT_STUDENT_NAME");?>");
			dijit.byId('old_stu').focus();
			return false;
		}
	
		var duplicateRecord = 0;
		var identity = $('#identity').val();
		var arrays = identity.split(',');
		if(identity!=""){
			currentStudent = dijit.byId('old_stu').get('value');
			for(var i=0;i<arrays.length;i++) {
				oldStudent = dijit.byId('studentId'+arrays[i]).get('value');
				if(currentStudent == oldStudent){
					duplicateRecord=1;
					alert("Can not add the same student");
					break;
				}
			}
		}
		
		if(duplicateRecord==1){
			return false;
		}
	
		labelStudent = dijit.byId("old_stu").attr('displayedValue');
		studentId = dijit.byId("old_stu").get("value");
		
		col++;no++;
		template='';
	
			template+='<td data-label="<?php echo $tr->translate("REMOVE_RECORD");?>" align="center">';
				template+='<span title="<?php echo $tr->translate("REMOVE_RECORD");?>" class="removeRow" onclick="deleteRecord('+col+');" ><i class="glyphicon glyphicon-trash" aria-hidden="true"></i></span>';
			template+='</td>';
			template+='<td data-label="<?php echo $tr->translate("N_O");?>" align="center">'+no+'</td>';
			template+='<td data-label="<?php echo $tr->translate("STUDENT_NAME");?>" ><label id="item_label_'+col+'">'+labelStudent+'<label><input type="hidden" value="'+studentId+'" dojoType="dijit.form.TextBox" name="studentId'+col+'" id="studentId'+col+'"/>';
			
			
			template+='<td data-label="<?php echo $tr->translate("FROM_TIME");?>">';
			template+='<input onChange="timeOnchageValue('+col+')" type="text" class="fullside" name="fromTime'+col+'" id="fromTime'+col+'" value="T08:00:00"  dojoType="dijit.form.TimeTextBox"  required="true" />';	
			template+='</td>';
			
			template+='<td data-label="<?php echo $tr->translate("TO_TIME");?>">';
			template+='<input type="text" class="fullside" name="toTime'+col+'" id="toTime'+col+'" value="T11:00:00"  dojoType="dijit.form.TimeTextBox"  required="true" />';	
			template+='</td>';
		tmp='<tr id="row'+col+'" class="rowData" >';
		tmp+="</tr>";
		dojo.query("#table_row").append(tmp);
		if($("#identity").val()!="") {
			var identity = $("#identity").val();
			$("#identity").val(identity+','+col);
		} else {$("#identity").val(col);}
		dojo.html.set(dojo.byId("row"+col),template , {
		     parseContent: true,
		});
 
}

function deleteRecord(index) {
	var identity = $('#identity').val();
	var arrays = identity.split(',');
	for(var i=0;i<arrays.length;i++) {
	if(arrays[i] == index) arrays.splice(i,1);
	}
	var strings = arrays.join(',');
	$('#identity').val(strings);
	dojo.query("#row"+index).remove();
}
